{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "build/public/**",
            "use": "@vercel/static"
        },
        {
            "src": "build/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/favicon.ico",
            "dest": "build/public/favicon.ico"
        },
        {
            "src": "/robots.txt",
            "dest": "build/public/robots.txt"
        },
        {
            "src": "/static/(.*)",
            "dest": "build/public/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "build/server.js"
        }
    ],
    "rewrites": [
        {
            "source": "/proxy/:match*",
            "destination": "https://nifty-league.com/:match*"
        }
    ]
}